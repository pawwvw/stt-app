{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stt-app",
  "version": "0.1.0",
  "identifier": "com.pawwvw.stt-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Расшифровка аудио",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "whisher/whisper-cli",
      "whisher/whisper-cli.exe",
      "whisher/*.dll"
    ]
  }
}
